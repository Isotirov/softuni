rows = int(input())
cols = int(input())

matrix = []
areas = {}

for _ in range(rows):
    matrix.append(list(input()))


def connected_areas(row, col, matrix, sibling):
    if row < 0 or col < 0 or row >= len(matrix) or col >= len(matrix[0]):
        return
    if matrix[row][col] == 'v' or matrix[row][col] != sibling:
        return
    matrix[row][col] = 'v'
    connected_areas(row - 1, col, matrix, sibling)
    connected_areas(row + 1, col, matrix, sibling)
    connected_areas(row, col - 1, matrix, sibling)
    connected_areas(row, col + 1, matrix, sibling)


for r in range(rows):
    for c in range(cols):
        sibling = matrix[r][c]
        if sibling != 'v':
            connected_areas(r, c, matrix, sibling)
            if sibling not in areas:
                areas[sibling] = 0
            areas[sibling] += 1

print(f'Areas: {sum(areas.values())}')
for letter, number in sorted(areas.items()):
    print(f"Letter '{letter}' -> {number}")
